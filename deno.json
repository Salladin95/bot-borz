{
	"tasks": {
		"build": "deno cache ./deps.ts & deno cache ./config.ts",
		"dev": "deno run --allow-all --watch ./src/index.ts",
		"start": "deno run --allow-all ./src/index.ts",
		"gen": "supabase gen types typescript --project-id yxruvgnitxbcbmiaovdz"
	},
	"compilerOptions": {
		"allowJs": false,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"exclude": ["src/testdata/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/", "./"],
		"exclude": ["src/testdata/"]
	},
	"test": {
		"include": ["src/"],
		"exclude": ["src/testdata/"]
	}
}
